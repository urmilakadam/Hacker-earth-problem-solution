import java.util.*;

class TestClass {
    public static void main(String args[] ) throws Exception {

        Scanner s = new Scanner(System.in);
        int num = s.nextInt();                 // Reading input from STDIN
       
       if(num%3==0){
           System.out.println("YES");
       }else{
            System.out.println("NO");   
       }


    }
}
